<?php
/**
 * @var \Laminas\View\Renderer\PhpRenderer $this
 * @var \Comment\Api\Representation\CommentRepresentation[] $comments
 * @var int|null $parentId
 */

$partial = $this->plugin('partial');
?>

<?php foreach ($comments as $comment) : ?>
    <?php $parent = $comment->parent(); ?>
    <?php if (($parent && $parent->id() === $parentId) || (empty($parent) && empty($parentId))): ?>
    <div id="comment-<?= $comment->id() ?>" class="comment">
        <?= $partial('common/admin/comment', ['comment' => $comment]) ?>
        <div class="comment-children">
            <?= $partial('common/admin/comments-thread', ['comments' => $comments, 'parentId' => $comment->id()]) ?>
        </div>
    </div>
    <?php endif; ?>
<?php endforeach; ?>
