<?php
/**
 * @var \Laminas\View\Renderer\PhpRenderer $this
 * @var \Omeka\Api\Representation\AbstractResourceEntityRepresentation $resource
 * @var bool $showForm
 * @var bool $showList
 * @var bool $listOpen
 */

if (empty($showForm) && empty($showList)) {
    return;
}
?>

<div id="comments-container" class="block block-comments-container">
    <?php if ($showList): ?>
    <?= $this->comments($resource, ['list_open' => isset($listOpen) ? !empty($listOpen) : null]) ?>
    <?php endif; ?>
	<?php if ($showForm): ?>
    <?= $this->commentForm($resource) ?>
    <?php endif; ?>
</div>
